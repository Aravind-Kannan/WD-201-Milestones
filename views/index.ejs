<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="csrf-token" content="<%= csrfToken %>" />
    <title>To-Do Manager</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="./css/styles.css" rel="stylesheet" />
    <script>
      const token = document
        .querySelector('meta[name="csrf-token"]')
        .getAttribute("content");
      function updateTodo(id) {
        fetch(`/todos/${id}`, {
          method: "put",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({
            _csrf: token,
          }),
        })
          .then((res) => {
            if (res.ok) {
              window.location.reload();
            }
          })
          .catch((err) => {
            console.error(err);
          });
      }
      function deleteTodo(id) {
        fetch(`/todos/${id}`, {
          method: "delete",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({
            _csrf: token,
          }),
        })
          .then((res) => {
            if (res.ok) {
              window.location.reload();
            }
          })
          .catch((err) => {
            console.error(err);
          });
      }
    </script>
  </head>
  <body>
    <div class="grid grid-cols-6">
      <div class="col-start-3 col-span-2">
        <%- include('header.ejs') %>
        <form action="/todos" method="post">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
          <div class="flex py-4 gap-2">
            <div class="flex-auto">
              <input
                name="title"
                class="border border-gray-300 text-gray-900 w-full rounded p-2 text-sm"
                type="text"
                placeholder="What's next?"
                required
              />
            </div>
            <div class="flex-auto">
              <input
                name="dueDate"
                class="border border-gray-300 text-gray-900 w-full rounded p-2 text-sm leading-4"
                type="date"
              />
            </div>
            <div class="flex-none">
              <button
                class="bg-green-600 text-white py-1 px-5 rounded font-medium mr-2 mb-1"
                type="submit"
              >
                Add
              </button>
            </div>
          </div>
        </form>
        <div>
          <%- include( 'todo.ejs', {title: "Overdue", todos: overdue} ) %> <%-
          include('todo.ejs', {title: "Due Today", todos: dueToday}) %> <%-
          include('todo.ejs', {title: "Due Later", todos: dueLater}) %> <%-
          include('todo.ejs', {title: "Completed", todos: completed}) %>
        </div>
      </div>
    </div>
  </body>
</html>
